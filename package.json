{
  "name": "hardhat-enscribe",
  "version": "0.1.0",
  "description": "A Hardhat v3 plugin to name smart contracts",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "hardhat",
    "plugin",
    "hardhat-plugin"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "viem": "^2.37.8"
  },
  "peerDependencies": {
    "hardhat": "^3.0.0"
  },
	"devDependencies": {
		"@nomicfoundation/hardhat-viem": "^3.0.0",
		"@nomicfoundation/hardhat-network-helpers": "^1.0.0",
		"@types/chai": "^4.3.11",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.0.0",
		"chai": "^4.3.11",
		"eslint": "^9.0.0",
		"hardhat": "3.0.0",
		"prettier": "^3.0.0",
		"rimraf": "^6.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.0.0",
		"vitest": "^1.6.0"
	},
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig.json",
		"lint": "eslint . --ext .ts",
		"format": "prettier --write .",
		"test": "vitest run",
		"test:unit": "vitest run src/internal/tasks/name.test.ts",
		"test:integration": "vitest run test/enscribe.integration.test.ts",
		"test:hardhat": "vitest run test/enscribe.hardhat.test.ts",
		"test:all": "pnpm run test:unit && pnpm run test:integration"
	},
  "publishConfig": {
    "access": "public"
  }
}
